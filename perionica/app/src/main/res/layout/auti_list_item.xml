<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/marka_text_viwe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/car_color_viwe"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textColor="@color/titleTextColor"
        tools:text="Mercedes"/>

    <TextView
        android:id="@+id/reg_viwe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marka_text_viwe"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/car_color_viwe"
        tools:text="Registracija" />

    <TextView
        android:id="@+id/cena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/marka_text_viwe"
        android:layout_alignBottom="@+id/marka_text_viwe"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:textColor="@color/titleTextColor"
        android:textStyle="bold"
        tools:text="70 evra" />

    <View
        android:id="@+id/car_color_viwe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/marka_text_viwe"
        android:layout_marginStart="20dp" />

</RelativeLayout>