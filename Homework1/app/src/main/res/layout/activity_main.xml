<?xml version="1.0" encoding="utf-8"?>
<!-- TODO Change this so we use LinearLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <!-- TODO Insert xml code to display Increment button here -->
    <Button
        android:id="@+id/increment_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="@string/increment_button_text"/>

    <!-- TODO Change this text view, so we display counter information inside -->
    <TextView
        android:id="@+id/counter_text_view"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        tools:text="0"/>

    <!-- TODO Insert xml code to display Decrement button here -->
    <Button
        android:id="@+id/decrement_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="@string/decrement_button_text"/>

</LinearLayout>