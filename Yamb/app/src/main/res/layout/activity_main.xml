<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.code.yamb.MainActivity">

    <ToggleButton
        android:id="@+id/dice1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_selector"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextThrow"
        app:layout_constraintEnd_toStartOf="@+id/dice2" />

    <ToggleButton
        android:id="@+id/dice2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_selector"
        android:textColor="#FFFFFF"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@id/dice1"
        app:layout_constraintBottom_toTopOf="@+id/nextThrow"
        app:layout_constraintEnd_toStartOf="@+id/dice3" />

    <ToggleButton
        android:id="@+id/dice3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_selector"
        android:textColor="#FFFFFF"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/nextThrow"
        app:layout_constraintEnd_toStartOf="@+id/dice4"
        app:layout_constraintStart_toEndOf="@+id/dice2" />

    <ToggleButton
        android:id="@+id/dice4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_selector"
        android:textColor="#FFFFFF"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/nextThrow"
        app:layout_constraintEnd_toStartOf="@+id/dice5"
        app:layout_constraintStart_toEndOf="@+id/dice3" />

    <ToggleButton
        android:id="@+id/dice5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_selector"
        android:textColor="#FFFFFF"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/nextThrow"
        app:layout_constraintEnd_toStartOf="@+id/dice6"
        app:layout_constraintStart_toEndOf="@+id/dice4" />

    <ToggleButton
        android:id="@+id/dice6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_selector"
        android:textColor="#FFFFFF"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/nextThrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dice5" />

    <Button
        android:id="@+id/nextThrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rool"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
